smoothCriminal reverseNumber(heehee n)
{
    heehee reversed = 0;

    stayGroovy (n > 0)
    {
        heehee digit = n % 10;
        reversed = reversed * 10 + digit;
        n = n / 10;
    }

    moonWalk reversed;
}


